<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="trello.list">
      <field name="name">trello list</field>
      <field name="model">trello.trello</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
   

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="trello.action_window">
      <field name="name">trello window</field>
      <field name="res_model">trello.trello</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="trello.action_server">
      <field name="name">trello server</field>
      <field name="model_id" ref="model_trello_trello"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
   

    <!-- Top menu item -->
    
    <menuitem name="trello" id="trello.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="trello.menu_1" parent="trello.menu_root"/>
    <menuitem name="Menu 2" id="trello.menu_2" parent="trello.menu_root"/>
   
    <!-- actions -->
    
    <menuitem name="List" id="trello.menu_1_list" parent="trello.menu_1"
              action="trello.action_window"/>
    <menuitem name="Server to list" id="trello" parent="trello.menu_2"
              action="trello.action_server"/>
   
  </data>
</odoo>